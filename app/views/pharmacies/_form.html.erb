<%= form_for @pharmacy do |f| %>
    <%= f.collection_check_boxes :pharmacy_id, Pharmacy.all, :id, :name %><br>
    <%= f.fields_for :pharmacy, @pharmacy.build_pharmacy do |pharmacies_fields| %>
    <%= pharmacies_fields.label :name, "List A New Pharmacy:" %><br>
    <%= pharmacies_fields.text_field :name %><br>
<% end %>
    <%= f.submit %>
<% end %> 
  
