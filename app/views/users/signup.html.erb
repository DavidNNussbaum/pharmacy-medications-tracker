<div class="ft-sz-25"> 
 <div id="signup-form">
    <%= form_with(model: @user, local: true) do |f| %>
        <div class="">
            <%= f.label :first_name, class: "form-label" , class: "form-label" %>
            <%= f.text_field :first_name, class: "form-input" %>
        </div>
        <div class="">
            <%= f.label :last_name, class: "form-label" , class: "form-label" %>
            <%= f.text_field :last_name, class: "form-input" %>
        </div>
        <div class="">
            <%= f.label :email, class: "form-label" , class: "form-label" %>
            <%= f.email_field :email, class: "form-input" %>
        </div>
        <div class="">
            <%= f.label :password, class: "form-label" , class: "form-label" %>
            <%= f.password_field :password, class: "form-input" %><br>
            <%= f.label :password_confirmation, class: "form-label" , class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-input" %>
        </div>
        
          <%= label_tag :code %>
           <%= text_field_tag :code %><br>
        <%= f.submit :signup %>
    <% end %>
 </div>
</div>